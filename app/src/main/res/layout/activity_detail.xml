<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WBS Code"
        android:textSize="@dimen/text_label"/>

    <TextView
        android:id="@+id/wbs_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="WBS Code"
        android:textColor="@color/text_dark1"
        android:textSize="@dimen/text_desc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/bg_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WBS Item"
        android:textSize="@dimen/text_label"/>

    <TextView
        android:id="@+id/wbs_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="WBS Item"
        android:textColor="@color/text_dark1"
        android:textSize="@dimen/text_desc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/bg_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:textSize="@dimen/text_label"/>

    <TextView
        android:id="@+id/budget_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="6dp"
        android:textColor="@color/text_dark1"
        android:textSize="@dimen/text_desc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/bg_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approved Budget"
        android:textSize="@dimen/text_label"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$100,000"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_dark1"
        android:textSize="@dimen/text_desc"/>

</LinearLayout>